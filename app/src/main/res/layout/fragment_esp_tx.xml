<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginVertical="30dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="@string/protocol" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:background="@drawable/rounded_background"
                android:gravity="center_vertical">

                <!-- Your description text -->
                <Button
                    android:id="@+id/esp_tx_tcp_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tcp"
                    android:textStyle="bold"
                    android:minHeight="36dp"
                    android:background="@drawable/ripple_white_button"
                    android:textColor="@color/bs_primary" />

                <Button
                    android:id="@+id/esp_tx_udp_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/udp"
                    android:textStyle="bold"
                    android:minHeight="36dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/basic_button_text_color" />



                <!-- Material 3 switch -->

            </LinearLayout>

            <Switch
                android:id="@+id/esp_tx_crc_toggle"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_height="wrap_content"
                android:text="@string/crc" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/esp_tx_list_tb"
                    android:stretchColumns="*"
                    android:gravity="center"
                    android:padding="16dp">
                    <TableRow
                        android:background="@color/bs_primary"
                        >

                        <TextView
                            android:text="@string/sensor_th_order"
                            android:textColor="@android:color/white"
                            android:padding="8dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:text="@string/sensor_th_variable_name"
                            android:textColor="@android:color/white"
                            android:padding="8dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:text="@string/sensor_th_data_type"
                            android:textColor="@android:color/white"
                            android:padding="8dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:text="@string/sensor_th_number_of_channels"
                            android:textColor="@android:color/white"
                            android:padding="8dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:text="@string/sensor_th_number_of_channels"
                            android:textColor="@android:color/white"
                            android:padding="8dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:text="@string/outliers"
                            android:textColor="@android:color/white"
                            android:padding="8dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:text="Actions"
                            android:textColor="@android:color/white"
                            android:padding="8dp"
                            android:textStyle="bold"/>

                    </TableRow>
                    <TableRow
                        android:background="@drawable/table_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_span="7"
                            android:text="⚠️ There is no ESP TX Settings now."
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:padding="16dp"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_success_button"
                android:textColor="@color/basic_button_text_color"
                android:id="@+id/esp_tx_load_sensors_btn"
                android:padding="16dp"
                android:text="@string/load_sensors" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_primary_button"
                android:textColor="@color/basic_button_text_color"
                android:id="@+id/esp_tx_load_actuators_btn"
                android:layout_marginHorizontal="12dp"
                android:padding="16dp"
                android:text="@string/load_actuators" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>