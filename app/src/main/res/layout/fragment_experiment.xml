<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">
        <!-- Save & Load Buttons -->
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

            <AutoCompleteTextView
                android:id="@+id/id_autocomplete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter Experiment Setting Title"
                android:backgroundTint="@color/bs_info"
                android:layout_gravity="center_vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:completionThreshold="2"
                android:inputType="text" />

            <Button
                android:id="@+id/experiment_save_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_success_button"
                android:textColor="@color/basic_button_text_color"
                android:text="@string/save_btn" />

            <Button
                android:id="@+id/experiment_load_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_primary_button"
                android:textColor="@color/basic_button_text_color"
                android:text="@string/load_btn" />
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Experiment Set Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:weightSum="4"
            android:padding="8dp">

            <ToggleButton
                android:id="@+id/experiment_set1_btn"
                android:layout_width="90dp"
                android:checked="true"
                android:layout_height="30dp"
                android:textOn="@string/set1"
                android:textOff="@string/set1"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:textColor="@color/basic_button_text_color"
                android:background="@drawable/toggle_selector" />

            <ToggleButton
                android:id="@+id/experiment_set2_btn"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:textOn="@string/set2"
                android:textOff="@string/set2"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:textColor="@color/basic_button_text_color"
                android:background="@drawable/toggle_selector" />

            <ToggleButton
                android:id="@+id/experiment_set3_btn"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:textOn="@string/set3"
                android:textOff="@string/set3"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:textColor="@color/basic_button_text_color"
                android:background="@drawable/toggle_selector" />

            <ToggleButton
                android:id="@+id/experiment_set4_btn"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:textOn="@string/set4"
                android:textOff="@string/set4"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:paddingVertical="0dp"
                android:textColor="@color/basic_button_text_color"
                android:background="@drawable/toggle_selector" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B0B0B0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:weightSum="12"
            android:padding="8dp">

        <!-- Command Selection Layout -->
            <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:stretchColumns="*"
            >
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/bs_primary"
                android:padding="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Items" />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Values" />
            </TableRow>
            <TableRow
                android:background="@drawable/table_border"
                >
                <TextView
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Command Selection" />

                <EditText
                    android:id="@+id/experiment_commands_select"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/darker_gray"
                    android:focusable="false"
                    android:backgroundTint="@color/bs_info"
                    android:clickable="true"
                    android:dividerHeight="1dp"/>

                <TextView
                    android:id="@+id/tvCurrentSetting1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:gravity="center"
                    android:padding="4dp" />


            </TableRow>
            <TableRow
                android:background="@drawable/table_border">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="N Trials"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="4dp" />
                <EditText
                    android:id="@+id/experiment_n_trials_text"
                    android:layout_width="50dp"
                    android:backgroundTint="@color/bs_info"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/enter_the_total_number_of_commands"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/experiment_n_trials_view"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:gravity="center"
                    android:padding="4dp" />

            </TableRow>
            <TableRow
                android:background="@drawable/table_border"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Command"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:paddingVertical="6dp" />
                <EditText
                    android:id="@+id/experiment_command_text"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/bs_info"
                    android:hint="@string/enter_command_time_in_0_1_degree_increments"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/experiment_command_view"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:gravity="center"
                    android:padding="4dp" />

            </TableRow>

            <TableRow
                android:background="@drawable/table_border"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/rest"
                    android:textSize="12sp"
                    android:paddingVertical="8dp" />
                <EditText
                    android:id="@+id/experiment_rest_text"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/bs_info"
                    android:hint="@string/enter_rest_time_in_0_1_degree_increments"
                    android:inputType="numberDecimal" />
                <TextView
                    android:id="@+id/experiment_rest_view"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:gravity="center"
                    android:padding="4dp" />
            </TableRow>
            <TableRow
                android:background="@drawable/table_border"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rest_random"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:paddingVertical="8dp" />
                <EditText
                    android:id="@+id/experiment_rest_random_text"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/bs_info"
                    android:hint="@string/enter_rest_random_time_in_0_1_degree_increments"
                    android:inputType="numberDecimal" />
                <TextView
                    android:id="@+id/experiment_rest_random_view"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:gravity="center"
                    android:padding="4dp" />

            </TableRow>

            <TableRow
                android:background="@drawable/table_border"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pre_run"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:paddingVertical="8dp" />
                <EditText
                    android:id="@+id/experiment_pre_run_text"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/bs_info"
                    android:hint="@string/enter_time_in_0_1_degree_increments"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/experiment_pre_run_view"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:gravity="center"
                    android:padding="4dp" />
            </TableRow>

            <TableRow
                android:background="@drawable/table_border"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post_run"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:paddingVertical="8dp" />
                <EditText
                    android:id="@+id/experiment_post_run_text"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/bs_info"
                    android:hint="@string/enter_time_in_0_1_degree_increments"
                    android:inputType="numberDecimal" />
                <TextView
                    android:id="@+id/experiment_post_run_view"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:gravity="center"
                    android:padding="4dp" />
            </TableRow>
                <TableRow
                    android:background="@drawable/table_border"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/run_time"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:paddingVertical="8dp" />
                <TextView
                    android:id="@+id/experiment_run_time_view"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:gravity="center"
                    android:padding="4dp" />
                </TableRow>


            </TableLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                >
                <Button
                    android:id="@+id/experiment_set_save_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Set Data"
                    android:textSize="18sp"
                    android:textColor="@color/basic_button_text_color"
                    android:background="@drawable/ripple_info_button" />

                <Button
                    android:id="@+id/experiment_reload_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reload"
                    android:layout_marginVertical="12dp"
                    android:textSize="18sp"
                    android:textColor="@color/basic_button_text_color"
                    android:background="@drawable/ripple_info_button" />

                <Button
                    android:id="@+id/experiment_update_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update"
                    android:textSize="18sp"
                    android:textColor="@color/basic_button_text_color"
                    android:background="@drawable/ripple_primary_button" />
            </LinearLayout>
        </LinearLayout>
        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="50dp"
            android:weightSum="5">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
