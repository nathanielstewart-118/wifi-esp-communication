<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12">
            <ScrollView
                android:orientation="vertical"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/monitoring_accordion_container"
                    android:layout_weight="2"
                    android:background="@drawable/accordion_border"
                    android:orientation="vertical">
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/monitoring_control" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="12dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/monitoring_start_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/start"
                        android:textColor="@color/basic_button_text_color"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/ripple_success_button"/>
                    <Button
                        android:id="@+id/monitoring_stop_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/stop"
                        android:textColor="@color/basic_button_text_color"
                        android:background="@drawable/ripple_danger_button"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:gravity="center"
                    android:text="@string/experiment_set" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/monitoring_experiment_set1_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/set1"
                        android:textColor="@color/basic_button_text_color"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/ripple_info_button"/>
                    <Button
                        android:id="@+id/monitoring_experiment_set2_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:text="@string/set2"
                        android:textColor="@color/basic_button_text_color"
                        android:background="@drawable/ripple_info_button"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="16dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/monitoring_experiment_set3_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/set3"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/basic_button_text_color"
                        android:background="@drawable/ripple_info_button"/>
                    <Button
                        android:id="@+id/monitoring_experiment_set4_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/set4"
                        android:textColor="@color/basic_button_text_color"
                        android:background="@drawable/ripple_info_button"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    >
                    <Button
                        android:id="@+id/monitoring_load_settings_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/sensor_load_command_settings"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textColor="@color/basic_button_text_color"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:background="@drawable/ripple_info_button"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="16dp"
                    android:text="@string/command_set" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/monitoring_command_set1_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/set_1"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/basic_button_text_color"
                        android:background="@drawable/ripple_primary_button"/>
                    <Button
                        android:id="@+id/monitoring_command_set2_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/set_2"
                        android:textColor="@color/basic_button_text_color"
                        android:background="@drawable/ripple_primary_button"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="16dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/monitoring_command_set3_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/set_3"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:textColor="@color/basic_button_text_color"
                        android:background="@drawable/ripple_primary_button"/>
                    <Button
                        android:id="@+id/monitoring_command_set4_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/set_4"
                        android:textColor="@color/basic_button_text_color"
                        android:background="@drawable/ripple_primary_button"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="30dp"
                    android:text="@string/log" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/log_message" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>