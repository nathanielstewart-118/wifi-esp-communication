<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/headerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monitoring"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:padding="16dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="10"
                android:id="@+id/monitoring_accordion_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#EEEEEE">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Monitoring Control" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/monitoring_start_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginRight="16dp"
                        android:backgroundTint="@color/bs_success"/>
                    <Button
                        android:id="@+id/monitoring_stop_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:text="Stop"
                        android:backgroundTint="@color/bs_danger"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Experiment Set" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/monitoring_experiment_set1_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Set1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginRight="16dp"
                        android:backgroundTint="@color/bs_info"/>
                    <Button
                        android:id="@+id/monitoring_experiment_set2_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:text="Set2"
                        android:backgroundTint="@color/bs_info"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/monitoring_experiment_set3_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Set3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginRight="16dp"
                        android:backgroundTint="@color/bs_info"/>
                    <Button
                        android:id="@+id/monitoring_experiment_set4_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Set4"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:backgroundTint="@color/bs_info"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <Button
                        android:id="@+id/monitoring_load_settings_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Load Command Settings"
                        android:layout_marginHorizontal="16dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:backgroundTint="@color/bs_info"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Command Set" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/monitoring_command_set1_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Set 1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginRight="16dp"
                        android:backgroundTint="@color/bs_primary"/>
                    <Button
                        android:id="@+id/monitoring_command_set2_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Set 2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:backgroundTint="@color/bs_primary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/monitoring_command_set3_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Set 3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:backgroundTint="@color/bs_primary"/>
                    <Button
                        android:id="@+id/monitoring_command_set4_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Set 4"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:backgroundTint="@color/bs_primary"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="30dp"
                    android:text="Log" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Log message" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>